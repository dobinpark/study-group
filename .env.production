NODE_ENV=production # Production 환경 명시

# Production 데이터베이스 설정 (실제 운영 DB 정보로 변경)
DB_HOST=your_production_db_host
DB_PORT=3306
DB_USERNAME=prod_user
DB_PASSWORD=prod_password
DB_DATABASE=study_group_prod

# Production Redis 설정 (실제 운영 Redis 정보로 변경)
REDIS_HOST=your_production_redis_host
REDIS_PORT=6379

# 더욱 강력한 secret key 사용 권장
SESSION_SECRET=your_production_secret_key
# Production 프론트엔드 도메인만 허용
CORS_ALLOWED_ORIGINS=https://your-production-frontend-domain.com

# 또는 443, Production 서버 포트 (일반적으로 80 또는 443)
PORT=80